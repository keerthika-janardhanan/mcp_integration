# Copilot/LLM Configuration
# Control when and where AI features are used

# ============================================
# RECORDING PHASE
# ============================================

# Use LLM for intelligent locator selection during recording finalization
# Set to "true" to enable Copilot analysis of recorded elements
# Set to "false" for faster processing (uses rule-based locator priority)
# DEFAULT: false (keeps recording fast)
USE_LLM_LOCATOR_GENERATION=false

# ============================================
# CODE GENERATION PHASE
# ============================================

# Use LLM for enhanced code generation (framework analysis, reusable components)
# Set to "true" to enable intelligent, framework-aware code generation
# Set to "false" to use static templates only (faster, but less intelligent)
# DEFAULT: true (enabled - this is where LLM provides the most value)
USE_LLM_CODE_ENHANCEMENT=true

# Use LLM for framework repository analysis (detects reusable components)
# Only applies if USE_LLM_CODE_ENHANCEMENT=true
# DEFAULT: true
ANALYZE_FRAMEWORK_WITH_LLM=true

# ============================================
# GENERAL LLM SETTINGS
# ============================================

# Enable/disable ALL LLM features globally
# Set to "false" to completely disable Copilot/AI
# DEFAULT: true (enabled for code generation only)
ENABLE_LLM_FEATURES=true

# LLM timeout (milliseconds) - how long to wait for LLM responses
LLM_TIMEOUT_MS=10000

# ============================================
# RECOMMENDED CONFIGURATION (DEFAULT)
# ============================================

# Recording: NO LLM (instant, fast)
#   USE_LLM_LOCATOR_GENERATION=false
#   → Recording finalization: ~instant
#   → No delays during or after recording
#   → Uses rule-based locator priority (still high quality)

# Code Generation: YES LLM (intelligent)
#   USE_LLM_CODE_ENHANCEMENT=true
#   ANALYZE_FRAMEWORK_WITH_LLM=true
#   ENABLE_LLM_FEATURES=true
#   → Framework analysis: Detects reusable components
#   → Smart code generation: Proper waits, type safety
#   → Flexible selectors: Handles dynamic elements
#   → Generation time: 10-15 seconds (worth it!)

# ============================================
# PERFORMANCE vs INTELLIGENCE TRADEOFF
# ============================================

# FAST MODE (No Copilot at all):
#   USE_LLM_LOCATOR_GENERATION=false
#   USE_LLM_CODE_ENHANCEMENT=false
#   ENABLE_LLM_FEATURES=false
#   → Recording: ~instant
#   → Generation: 1-2 seconds (static templates)
#   → Quality: Good (rule-based)

# BALANCED MODE (Default - Copilot for Generation Only):
#   USE_LLM_LOCATOR_GENERATION=false
#   USE_LLM_CODE_ENHANCEMENT=true
#   ENABLE_LLM_FEATURES=true
#   → Recording: ~instant ✅
#   → Generation: 10-15 seconds (LLM-enhanced) ✅
#   → Quality: Excellent (reusable components, smart waits) ✅

# FULL INTELLIGENT MODE (Copilot Everywhere):
#   USE_LLM_LOCATOR_GENERATION=true
#   USE_LLM_CODE_ENHANCEMENT=true
#   ENABLE_LLM_FEATURES=true
#   → Recording: 2-5 seconds per action
#   → Generation: 10-15 seconds
#   → Quality: Best (optimal locators + framework integration)

# ============================================
# NOTES
# ============================================

# - Recording is NEVER blocked by LLM - script injection is async
# - LLM for locators happens during FINALIZATION (after Ctrl+C)
# - LLM for code gen happens when you click "Generate Script"
# - Even with recording LLM disabled, you get high-quality Playwright code
# - LLM in code gen adds: framework integration, smart waits, type safety, dropdown options

